platform :ios, '8.0'

target 'PocketForecast' do
    
    pod 'Typhoon', '3.3.3'

    pod 'ICLoader'
    pod 'NGAParallaxMotion'
    pod 'NSURL+QueryDictionary'
    pod 'OCLogTemplate'
    pod 'PaperFold', :git => 'https://github.com/jasperblues/PaperFold-for-iOS.git', :tag => '1.2-no-gesture-recognizers'
    
end

# Test Dependencies

target 'PocketForecastTests' do
    pod 'Expecta', '~> 0.2.1'
    pod 'OCHamcrest'
    pod 'OCMockito'
end
